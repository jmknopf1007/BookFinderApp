<div class="book-index"><br>
<h2>All the Books</h2>


    <%= form_tag(books_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], class: "input-field", placeholder: "search by author" %>
    <%= submit_tag ("Search"), class: "btn btn-outline-dark" %>
    <% end %>


<br><ul>
    <% @books.each do |book| %>
    <li>
       <em><%= link_to book.title, book %></em> 
    </li><br>
    
    <% end %>
</ul>
</div>
