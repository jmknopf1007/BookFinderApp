<div class="login-page"><br>
<h1>Welcome to My Bookz</h1>
<%= image_tag("app/assets/images/my-bookz.jpeg", width: '200vw', class: "logo-style") %><br>
<br><h4><em>Discover new books through peer reviews</em></h4>




    <%= flash[:message] %>
    <%= form_for :auth do |f| %><br>

    <p><strong>Username:</strong> <%= f.text_field :username, class: "input-field", placeholder: "type name here" %><br><br>
    <p><strong>Password</strong>: <%= f.password_field :password, class: "input-field", placeholder: "type password here" %><br><br><br>
    
    
    <%= f.submit "Login", class: "btn btn-outline-dark" %>
    <% end %>
  
    <br>
   
    <%= button_to "Sign Up", signup_path, class: "btn btn-outline-dark" %>
    
</div>
