<div class="review-index">
    <h2>All the Reviews</h2>

        <ul>
        <% @reviews.each do |review| %>
            <li class="review-index">
               <em><%= review.song.name %></em><br> reviewed by <u><%= review.user.username %></u>-
               <%= link_to review.text, review %>
               <p><strong>Review date:</strong> <%= review.created_at %></p>
            </li>
            <br>
            <% end %>
        </ul>

</div>
