<div class="container text-center">
<h2>New Song Yeah</h2>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
    <p><strong>Name:</strong> <%= f.text_field :name %><br>
    <p><strong>Artist:</strong> <%= f.text_field :artist %><br>
    <p><strong>Genre:</strong><br>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %><br><br>
   
    <%= f.submit %>
   
   <% end %>
   </div>