<div class="container text-center">
<h2>Edit a Song</h2>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
   
   <%=  f.label :artist %><br>
    <%= f.text_field :artist %><br><br>

    <%=  f.label :genre %><br>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %><br><br>
   
    <%= f.submit %>
   
   <% end %>
   </div>