<div class="song-show">
<h2>About this Song</h2> 

<p><strong>Name:</strong> <em><%=@song.name%></em></p>
<p><strong>Artist:</strong> <%=@song.artist%></p> 

<p><strong> Genre's:</strong> 
    <% @genres.each do |genre| %>
    |<%= genre.name %>|
    <% end %>
</p> 

<%= link_to 'Edit Song', edit_song_path(@song.id) %> <br><br>
<!--<%= button_to 'Delete Song', song_path(@song), method: :delete %>-->



<h2>Reviews for this Song</h2>
<% if @reviews.length == 0 %>
<p>No reviews for this song yet...</p>
<% else %>
<% @reviews.each do |review| %>

    <p><strong>User:</strong> <u><%= review.user.username %></u><br><br>
      <%= link_to review.text, review %><br>
       <p><strong>Review date:</strong> <%= review.created_at %>
        <% end %>
    <% end %>


</div>

