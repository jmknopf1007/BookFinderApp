<div class="song-show"><br>
<h2>About this Song</h2> 

<p>Name: <em><%=@song.name%></em></p>
<p>Artist: <%=@song.artist%></p> 

<p> Genre's: 
    <% @genres.each do |genre| %>
    |<%= genre.name %>|
    <% end %>
</p> 

<%= link_to 'Edit Song', edit_song_path(@song.id) %> <br><br>
<!--<%= button_to 'Delete Song', song_path(@song), method: :delete %>-->



<h2>Reviews for this Song</h2>
<% if @reviews.length == 0 %>
<p>No reviews for this song yet...</p>
<% else %>
<% @reviews.each do |review| %>

    <p>User: <u><%= review.user.username %></u><br><br>
      <%= link_to review.text, review %><br>
       <p>Review date: <%= review.created_at %>
        <% end %>
    <% end %>


</div>

