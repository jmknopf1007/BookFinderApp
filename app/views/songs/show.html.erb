<div class="container text-center">
<h2>Song Show Page</h2> 

<p><strong>Name</strong>: <%=@song.name%></p>
<p><strong>Artist</strong>: <%=@song.artist%></p> 

<p><strong> Genre's</strong>: 
    <% @genres.each do |genre| %>
    |<%= genre.name %>|
    <% end %>
</p> 

<%= link_to 'Edit Song', edit_song_path(@song.id) %> <br><br>
<!--<%= button_to 'Delete Song', song_path(@song), method: :delete %>-->

<div class="song_show">

<h3>Reviews for this Song</h3>
<ul>
<% @reviews.each do |review| %>
    <li>
    <p><strong>User:</strong> <%= review.user.username %><br><br>
        <%= link_to review.text, review %><br>
       <p><strong>Review date:</strong> <%= review.created_at %>
    </li>
    <% end %>
</ul>
</div>
</div>

